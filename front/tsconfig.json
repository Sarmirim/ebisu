{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es6",                        // material-ui https://material-ui.com/ru/guides/typescript/
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,          // material-ui https://material-ui.com/ru/guides/typescript/
    "noImplicitThis": true,         // material-ui https://material-ui.com/ru/guides/typescript/
    "strictNullChecks": true        // material-ui https://material-ui.com/ru/guides/typescript/
  },
  "include": [
    "src"
  ]
}
